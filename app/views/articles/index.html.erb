<div id="middleBar">
	<div class="ui divider"></div>
		<div class= "ui relaxed grid">
			<div id= "pageTitle" class= "six wide column">
				<h1>User Submitted</h1>
				<h1>Articles</h1>
			</div>
			<div id ="horizontalDiv" class="ui two column very 	relaxed 	stackable grid">
				<div class= "ui vertical divider">
				explore
				</div>
			</div>
			<div id= "pageDescription" class="ui eight wide column">
					<ul>
					<li>Click on the article title for more information and data analysis.
				</li>
					<br>
					<li>Select two or more articles and click compare to compare the articles' data.
					</li>
					<br>
					<li>Compare similar topics and current events from different news sources to see their biases.</li>
					<br>
					<li>Signup or login and add your own articles and sources.
					</li>
				</ul>
			</div>
		</div>
	<div class="ui divider"></div>
</div>

<div id="compareForm">

	<%= form_tag(compare_path, {method: "get"})	 do %>
	<div id= "compareButton" > 
			<%= submit_tag "Compare", class: "ui huge violet button" %>
	</div>

	<div id= "articles" class= "ui relaxed grid">
		<% @topics.each do |topic| %>

		<%@score = 0%>
    <%topic.articles.each do |article|%>
      <%@score += article.score.to_f%>
    <%end%>
    <%if topic.articles.length > 0  %>
    <%@score /= topic.articles.length%>
    <%end  %>
	
		<div id= "article" class= "four wide column">
		
		<div id= "articleTitle" ><%= link_to topic.title, topic_path(topic) %></div>
		

		
		Average sentiment: <%=@score.to_f.round(3)  %>
		
	  		<div id="chartsAvailable">
	  		
	  			<i class="bar chart icon"></i>
	  			<i class="pie chart icon"></i>
	  			<i class="line chart icon"></i>
	  		</div>
		</div>
		<% end %>
    <% end %>

</div>



